<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <h1 class="m-4 heading">Quora Post</h1>
    <% for(let post of posts) {%>
    <div class="card m-4" style="width: 90%">
        <div class="card-body">
          <div class="flex">
            <h5 class="card-title">@<%= post.username %></h5>
            <form  method="post" action="/posts/delete/<%= post.id %>?_method=delete">
              <button class="m-4">Delete</button>
            </form>

          </div>
          <h6 class="card-subtitle mb-2 text-body-secondary">Content</h6>
          <p class="card-text"><%= post.content %></p>
          <a href="http://localhost:3000/posts/show/<%= post.id %>" class="card-link">Show</a>
          <a href="http://localhost:3000/posts/edit/<%= post.id %>" class="card-link">Update Post</a>
          
        </div>
      </div>
      <% } %>
      <button class="m-4"><a style="text-decoration: none; color: red;" href="http://localhost:3000/posts/new">Add Post</a></button>
      
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>